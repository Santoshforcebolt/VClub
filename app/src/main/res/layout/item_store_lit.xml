<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1px"
    android:background="@color/colorBack">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:background="@color/colorFore"
        android:orientation="horizontal"
        android:paddingLeft="25px"
        android:paddingTop="40px"
        android:paddingRight="25px"
        android:paddingBottom="40px">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/textSuper"
                android:textSize="@dimen/size_30"
                tools:text="东莞市万科金域华府店" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:textColor="@color/textMinor"
                android:textSize="@dimen/size_24"
                tools:text="东莞市南城区金鱼华府一期3号楼124号铺" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="@string/a_business_time_"
                android:textColor="@color/textMinor"
                android:textSize="@dimen/size_24" />

            <TextView
                android:id="@+id/tv_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="@string/a_contact_tel_"
                android:textColor="@color/textMinor"
                android:textSize="@dimen/size_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="0.0Km"
                android:visibility="invisible"
                android:textColor="@color/textSuper"
                android:textSize="@dimen/size_24" />

            <ImageView
                android:id="@+id/iv_tel"
                android:layout_width="37px"
                android:layout_height="37px"
                android:layout_marginTop="60px"
                android:scaleType="centerCrop"
                android:src="@drawable/tel"
                app:layout_auto_basewidth="height" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="43px"
        android:layout_height="43px"
        android:layout_marginTop="1px"
        android:scaleType="centerCrop"
        android:src="@drawable/check"
        app:layout_auto_basewidth="height" />
</FrameLayout>