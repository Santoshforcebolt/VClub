<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="255px"
    android:layout_marginLeft="20px"
    android:layout_marginTop="20px"
    android:layout_marginRight="20px"
    android:background="@drawable/ticket_bg"
    android:divider="@drawable/shape_divider_line"
    android:orientation="vertical"
    android:showDividers="middle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25px"
        android:layout_marginTop="30px"
        android:layout_marginRight="25px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_flag"
            android:layout_width="120px"
            android:layout_height="87px"
            android:scaleType="centerCrop"
            android:background="@drawable/cash_ticket" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_marginRight="20px"
            android:layout_toLeftOf="@+id/btn_get"
            android:layout_toRightOf="@+id/iv_flag"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="name"
            android:textColor="@color/textSuper"
            android:textSize="@dimen/size_34" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_marginTop="10px"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="desc"
            android:textColor="@color/textMinor"
            android:textSize="@dimen/size_22" />

        <Button
            android:id="@+id/btn_get"
            android:layout_width="150px"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_bg_deep_gray_r5"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/a_now_get"
            android:textAllCaps="false"
            android:textColor="@color/colorFore"
            android:textSize="@dimen/size_26" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25px"
        android:layout_marginRight="25px">

        <TextView
            android:id="@+id/tv_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/a_limit_"
            android:textColor="@color/textMinor"
            android:textSize="@dimen/size_22" />

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="0 day"
            android:textColor="@color/textMinor"
            android:textSize="@dimen/size_22" />


    </RelativeLayout>


</RelativeLayout>