<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1px"
    android:background="@drawable/shape_bg_white_r5"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="64px"
            android:layout_height="42px"
            android:background="@drawable/festival_left" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:text="@string/a_goods_recommend"
            android:textColor="@color/textMain"
            android:textSize="@dimen/size_34"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="64px"
            android:layout_height="42px"
            android:background="@drawable/festival_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorFore"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="25px">

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/iv_goods"
            android:layout_width="280px"
            android:layout_height="280px"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder_1"
            app:layout_auto_basewidth="height"
            app:sriv_left_bottom_corner_radius="5px"
            app:sriv_left_top_corner_radius="5px"
            app:sriv_right_bottom_corner_radius="5px"
            app:sriv_right_top_corner_radius="5px" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="280px"
            android:layout_marginLeft="25px"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="5px"
            android:paddingBottom="5px">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="6px"
                android:maxLines="2"
                android:text="尊尼获加洋酒 威士忌 黑方 黑牌 调配型苏格兰威士700ml调配型苏格兰威士700ml"
                android:textColor="@color/textSuper"
                android:textSize="@dimen/size_28" />

            <TextView
                android:id="@+id/tv_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="38px"
                android:text="@string/a_average_evaluate_"
                android:textColor="@color/textLesser"
                android:textSize="@dimen/size_24" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginTop="25px"
                android:layout_weight="1"
                android:text="@string/a_wine_collect_num_"
                android:textColor="@color/textLesser"
                android:textSize="@dimen/size_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10px"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:layout_weight="1"
                    android:textColor="@color/colorBrown"
                    android:textSize="@dimen/size_36" />

                <TextView
                    android:id="@+id/tv_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25px"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:text="0.00"
                    android:textColor="@color/textLesser"
                    android:textSize="@dimen/size_26" />

                <TextView
                    android:id="@+id/tv_enjoy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/a_go_enjoy"
                    android:textColor="@color/colorBrown"
                    android:textSize="@dimen/size_24" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>