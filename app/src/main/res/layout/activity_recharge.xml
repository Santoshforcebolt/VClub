<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="78px"
            android:background="@color/colorFore"
            android:gravity="center_vertical"
            android:paddingLeft="25px"
            android:text="@string/a_recharge_pound"
            android:textColor="@color/textMinor"
            android:textSize="@dimen/size_26" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1px"
            android:background="@color/colorFore"
            android:orientation="vertical"
            android:paddingBottom="35px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginTop="34px"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv200"
                    android:layout_width="160px"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_bg_brown_gray"
                    android:gravity="center"
                    android:text="200"
                    android:textColor="@color/selector_white_gray"
                    android:textSize="@dimen/size_32" />

                <TextView
                    android:id="@+id/tv500"
                    android:layout_width="160px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:background="@drawable/selector_bg_brown_gray"
                    android:gravity="center"
                    android:text="500"
                    android:textColor="@color/selector_white_gray"
                    android:textSize="@dimen/size_32" />

                <TextView
                    android:id="@+id/tv1000"
                    android:layout_width="160px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:background="@drawable/selector_bg_brown_gray"
                    android:gravity="center"
                    android:text="1000"
                    android:textColor="@color/selector_white_gray"
                    android:textSize="@dimen/size_32" />

                <TextView
                    android:id="@+id/tv5000"
                    android:layout_width="160px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:background="@drawable/selector_bg_brown_gray"
                    android:gravity="center"
                    android:text="5000"
                    android:textColor="@color/selector_white_gray"
                    android:textSize="@dimen/size_32" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginTop="20px"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv10000"
                    android:layout_width="160px"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_bg_brown_gray"
                    android:gravity="center"
                    android:text="10000"
                    android:textColor="@color/selector_white_gray"
                    android:textSize="@dimen/size_32" />

                <TextView
                    android:id="@+id/tv38000"
                    android:layout_width="160px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:background="@drawable/selector_bg_brown_gray"
                    android:gravity="center"
                    android:text="38000"
                    android:textColor="@color/selector_white_gray"
                    android:textSize="@dimen/size_32" />

                <EditText
                    android:id="@+id/et_amount"
                    android:layout_width="340px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:background="@drawable/shape_bg_gray_r5"
                    android:gravity="center"
                    android:hint="@string/a_custom_amount"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:textColor="@color/textSuper"
                    android:textColorHint="@color/textLesser"
                    android:textSize="@dimen/size_32"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorFore"
            android:paddingLeft="25px"
            android:paddingTop="15px"
            android:paddingRight="25px"
            android:paddingBottom="35px"
            android:visibility="gone">

            <ImageView
                android:layout_width="34px"
                android:layout_height="34px"
                android:src="@drawable/gift" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="充值满1000元即可获得价值£699VIP年卡1张；门店任意消费8折优惠1次"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/size_24" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="142px"
        android:layout_marginTop="20px"
        android:background="@color/colorFore"
        android:orientation="horizontal"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="54px"
            android:layout_height="45px"
            android:layout_marginTop="31px"
            android:src="@drawable/card" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credit Card"
                android:textColor="@color/textMain"
                android:textSize="@dimen/size_30" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/a_please_input_credit_card_number"
                    android:lines="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/textLesser"
                    android:textSize="@dimen/size_30" />

                <ImageView
                    android:id="@+id/iv_edit"
                    android:layout_width="29px"
                    android:layout_height="32px"
                    android:layout_marginLeft="35px"
                    android:padding="5px"
                    android:src="@drawable/edit_card" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_gravity="center_vertical"
            android:padding="5px"
            android:scaleType="fitXY"
            android:src="@drawable/selector_check"
            app:layout_auto_basewidth="height" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_commit"
        style="@style/ButtonStyle"
        android:layout_marginTop="38px"
        android:text="@string/a_now_recharge" />

</LinearLayout>