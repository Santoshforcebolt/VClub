<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240px"
    android:layout_marginLeft="20px"
    android:layout_marginRight="20px"
    android:layout_marginTop="20px"
    android:background="@drawable/ticket_bg"
    android:orientation="vertical"
    android:paddingLeft="30px"
    android:paddingRight="30px"
    android:paddingTop="30px">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="120px"
        android:layout_height="87px"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:src="@drawable/cash_ticket_gray"
        app:layout_auto_basewidth="height" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_toLeftOf="@+id/iv_img"
        android:maxLines="2"
        android:text="name"
        android:textColor="@color/textSuper"
        android:textSize="@dimen/size_32" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="10px"
        android:text="desc"
        android:textColor="@color/textLesser"
        android:textSize="@dimen/size_26" />

    <TextView
        android:id="@+id/tv_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_desc"
        android:text=""
        android:textColor="@color/textLesser"
        android:textSize="@dimen/size_26"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20px"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="1970/00/00-1970/00/00"
        android:textColor="@color/textLesser"
        android:textSize="@dimen/size_22" />

    <TextView
        android:id="@+id/tv_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_time"
        android:layout_alignParentRight="true"
        android:text="@string/a_send_friend"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/size_24"
        android:visibility="gone" />


</RelativeLayout>