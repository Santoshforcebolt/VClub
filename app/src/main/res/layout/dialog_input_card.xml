<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="690px"
    android:layout_height="340px"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/shape_bg_white_r8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="8px"
            android:layout_height="30px"
            android:background="@color/textSuper" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="@string/a_input_credit_card_number"
            android:textColor="@color/textMain"
            android:textSize="@dimen/size_32" />
    </LinearLayout>

    <com.stripe.android.view.CardInputWidget
        android:id="@+id/mCardInputWidget"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20px"
        android:layout_marginTop="40px"
        android:gravity="center_vertical"
        android:layout_marginRight="20px"
        android:background="@drawable/shape_bg_gray_r5"
        android:paddingLeft="15px"
        android:paddingRight="15px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30px"
        android:layout_marginTop="50px"
        android:layout_marginRight="30px"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="66px"
            android:text="@string/a_cancel"
            android:textColor="@color/textMinor"
            android:textSize="@dimen/size_32" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a_confirm"
            android:textColor="@color/textMain"
            android:textSize="@dimen/size_32" />
    </LinearLayout>

</LinearLayout>