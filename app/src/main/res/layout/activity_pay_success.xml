<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="530px"
        android:background="@drawable/pay_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="164px"
            android:layout_height="164px"
            android:background="@drawable/pay_right"
            android:scaleType="centerCrop"
            app:layout_auto_basewidth="height" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:text="@string/a_pay_success"
            android:textColor="@color/colorFore"
            android:textSize="@dimen/size_40" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64px"
            android:layout_marginTop="70px"
            android:layout_marginRight="64px"
            android:background="@drawable/shape_bg_black_r5"
            android:orientation="vertical"
            android:padding="30px">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/a_pay_money_"
                    android:textColor="@color/colorFore"
                    android:textSize="@dimen/size_28" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:text="Â£0.00"
                    android:textColor="@color/colorFore"
                    android:textSize="@dimen/size_28" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/a_get_integral_"
                    android:textColor="@color/colorFore"
                    android:textSize="@dimen/size_28" />

                <TextView
                    android:id="@+id/tv_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:text="00"
                    android:textColor="@color/colorFore"
                    android:textSize="@dimen/size_28" />
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_detail"
        style="@style/ButtonStyle"
        android:layout_marginLeft="64px"
        android:layout_marginTop="64px"
        android:layout_marginRight="64px"
        android:text="@string/a_order_detail" />

    <Button
        android:id="@+id/btn_home"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:layout_marginLeft="64px"
        android:layout_marginTop="24px"
        android:layout_marginRight="64px"
        android:background="@drawable/shape_border_brown_r8"
        android:text="@string/a_return_home"
        android:textColor="@color/colorBrown"
        android:textSize="@dimen/size_32" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:layout_width="702px"
        android:layout_height="222px"
        android:layout_marginBottom="64px"
        android:background="@drawable/share_bg" />

</LinearLayout>