<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20px"
    android:background="@color/colorFore"
    android:orientation="vertical"
    android:padding="25px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:text="尊尼获加洋酒 威士忌 黑方 黑牌组合"
            android:textSize="@dimen/size_30"
            android:maxLines="1"
            android:textColor="@color/textSuper" />

        <com.easyder.club.widget.DrawableTextView
            android:id="@+id/dtv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5px"
            android:text="2商品"
            android:textColor="@color/textLesser"
            android:textSize="@dimen/size_24"
            app:imageHeight="20px"
            app:imageWidth="12px"
            app:rightImage="@drawable/arrow_right_little" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35px"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:layout_marginBottom="10px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="£0.00"
            android:textColor="@color/colorBrown"
            android:textSize="@dimen/size_30" />

        <TextView
            android:id="@+id/tv_sale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_weight="1"
            android:text="@string/a_sale"
            android:textColor="@color/textLesser"
            android:textSize="@dimen/size_22" />

        <ImageView
            android:layout_width="36px"
            android:layout_height="36px"
            android:scaleType="centerCrop"
            android:src="@drawable/sheng"
            app:layout_auto_basewidth="height" />

        <TextView
            android:id="@+id/tv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:text="£0.00"
            android:textColor="@color/colorBrown"
            android:textSize="@dimen/size_26" />

    </LinearLayout>

</LinearLayout>