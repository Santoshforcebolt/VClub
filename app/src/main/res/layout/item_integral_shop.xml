<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1px"
    android:background="@color/colorFore"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="25px">

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/iv_image"
        android:layout_width="280px"
        android:layout_height="280px"
        android:layout_marginRight="25px"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder_1"
        app:layout_auto_basewidth="height"
        app:sriv_left_bottom_corner_radius="5px"
        app:sriv_left_top_corner_radius="5px"
        app:sriv_right_bottom_corner_radius="5px"
        app:sriv_right_top_corner_radius="5px" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="280px"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="5px"
        android:paddingBottom="5px">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="6px"
            android:maxLines="2"
            android:text="尊尼获加洋酒 威士忌 黑方 黑牌 调配型苏格兰威士700ml.."
            android:textColor="@color/textSuper"
            android:textSize="@dimen/size_28" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_exchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:text="@string/a_yet_exchange"
                android:textColor="@color/textLesser"
                android:textSize="@dimen/size_24" />

            <TextView
                android:id="@+id/tv_repertory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:text="@string/a_repertory"
                android:textColor="@color/textLesser"
                android:textSize="@dimen/size_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="1000"
                android:textColor="@color/colorBrown"
                android:textSize="@dimen/size_34" />

            <TextView
                android:id="@+id/tv_original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:lines="1"
                android:text="£10.00"
                android:textColor="@color/textLesser"
                android:textSize="@dimen/size_24" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>