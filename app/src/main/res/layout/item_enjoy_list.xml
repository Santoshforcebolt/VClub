<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25px"
    android:background="@drawable/shape_bg_white_r30"
    android:orientation="horizontal"
    android:padding="30px"
    android:paddingTop="40px"
    android:paddingRight="30px"
    android:paddingBottom="40px">

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/iv_goods"
        android:layout_width="138px"
        android:layout_height="138px"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder_1"
        app:layout_auto_basewidth="height"
        app:sriv_left_bottom_corner_radius="5px"
        app:sriv_left_top_corner_radius="5px"
        app:sriv_right_bottom_corner_radius="5px"
        app:sriv_right_top_corner_radius="5px" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="138px"
        android:layout_marginLeft="25px"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="5px"
        android:paddingBottom="5px">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lineSpacingExtra="6px"
            android:maxLines="2"
            android:textColor="@color/textSuper"
            android:textSize="@dimen/size_28"
            tools:text="尊尼获加洋酒 威士忌 黑方 黑牌 调配型苏格兰威士700ml调配型苏格兰威士700ml" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40px"
                android:layout_marginTop="5px"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_bg_gray_r88"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:paddingLeft="13px"
                    android:paddingRight="13px"
                    android:text="0ml"
                    android:textColor="@color/textLesser"
                    android:textSize="@dimen/size_24" />

                <TextView
                    android:id="@+id/tv_degree"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15px"
                    android:background="@drawable/shape_bg_gray_r88"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:paddingLeft="13px"
                    android:paddingRight="13px"
                    android:text="0%vol"
                    android:textColor="@color/textLesser"
                    android:textSize="@dimen/size_24" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15px"
                    android:background="@drawable/shape_bg_gray_r88"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:paddingLeft="13px"
                    android:paddingRight="13px"
                    android:text="2008"
                    android:textColor="@color/textLesser"
                    android:textSize="@dimen/size_24" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_enjoy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a_go_enjoy"
                android:textColor="@color/colorBrown"
                android:textSize="@dimen/size_24" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>