<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30px"
    android:background="@drawable/shape_bg_white_r30"
    android:divider="@drawable/shape_divider_line_light"
    android:orientation="vertical"
    android:paddingLeft="30px"
    android:paddingTop="40px"
    android:paddingRight="30px"
    android:paddingBottom="40px"
    android:showDividers="middle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="138px"
        android:layout_marginBottom="30px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="138px"
            android:layout_height="138px"
            android:layout_marginRight="25px"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder_1" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:layout_toRightOf="@+id/iv_image"
            android:lineSpacingExtra="8px"
            android:maxLines="2"
            android:text=".."
            android:textColor="@color/textSuper"
            android:textSize="@dimen/size_28" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_alignBottom="@+id/iv_image"
            android:layout_marginBottom="5px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40px"
                android:layout_marginTop="5px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_bg_gray_r88"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:paddingLeft="13px"
                    android:paddingRight="13px"
                    android:text="0ml"
                    android:textColor="@color/textLesser"
                    android:textSize="@dimen/size_24" />

                <TextView
                    android:id="@+id/tv_degree"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15px"
                    android:background="@drawable/shape_bg_gray_r88"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:paddingLeft="13px"
                    android:paddingRight="13px"
                    android:text="0%vol"
                    android:textColor="@color/textLesser"
                    android:textSize="@dimen/size_24" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15px"
                    android:background="@drawable/shape_bg_gray_r88"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:paddingLeft="13px"
                    android:paddingRight="13px"
                    android:text="2008"
                    android:textColor="@color/textLesser"
                    android:textSize="@dimen/size_24" />
            </LinearLayout>


            <com.easyder.club.widget.DrawableTextView
                android:id="@+id/dtv_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a_expand"
                android:textColor="@color/textMinor"
                android:textSize="@dimen/size_24"
                app:imageHeight="10px"
                app:imageWidth="18px"
                app:rightImage="@drawable/arrow_down_little" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/shape_divider_line_light"
        android:orientation="vertical"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/a_wine_collect_num_"
                android:textColor="@color/textLesser"
                android:textSize="@dimen/size_28" />

            <ImageView
                android:id="@+id/iv_num_edit"
                android:layout_width="32px"
                android:layout_height="32px"
                android:scaleType="centerCrop"
                android:src="@drawable/edit_gray"
                app:layout_auto_basewidth="height" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/a_buy_price_"
                android:textColor="@color/textLesser"
                android:textSize="@dimen/size_28" />

            <ImageView
                android:id="@+id/iv_price_edit"
                android:layout_width="32px"
                android:layout_height="32px"
                android:scaleType="centerCrop"
                android:src="@drawable/edit_gray"
                app:layout_auto_basewidth="height" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_market_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/a_market_price_"
                android:textColor="@color/textLesser"
                android:textSize="@dimen/size_28" />

            <ImageView
                android:id="@+id/iv_market_edit"
                android:layout_width="32px"
                android:layout_height="32px"
                android:scaleType="centerCrop"
                android:src="@drawable/edit_gray"
                app:layout_auto_basewidth="height" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_buy_way"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/a_buy_way_"
                android:textColor="@color/textLesser"
                android:textSize="@dimen/size_28" />

            <ImageView
                android:id="@+id/iv_way_edit"
                android:layout_width="32px"
                android:layout_height="32px"
                android:scaleType="centerCrop"
                android:src="@drawable/edit_gray"
                app:layout_auto_basewidth="height" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pack_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28px"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_pack_up"
                android:layout_width="68px"
                android:layout_height="30px"
                android:scaleType="centerCrop"
                android:src="@drawable/arrow_up_big" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:text="@string/a_click_pack_up"
                android:textColor="@color/textMain"
                android:textSize="@dimen/size_24" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>