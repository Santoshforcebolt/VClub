<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/shape_divider_line_light"
        android:orientation="vertical"
        android:showDividers="beginning|middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:background="@color/colorFore"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="25px"
            android:paddingRight="25px">

            <TextView
                android:id="@+id/tv_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/a_order_number_"
                android:textColor="@color/textSuper"
                android:textSize="@dimen/size_28" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="status"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/size_28" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:background="@color/colorFore"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="25px"
            android:paddingTop="30px"
            android:paddingRight="25px"
            android:paddingBottom="30px">

            <ImageView
                android:layout_width="49px"
                android:layout_height="67px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="35px"
                android:src="@drawable/address" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textColor="@color/textMain"
                    android:textSize="@dimen/size_30" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15px"
                    android:lineSpacingExtra="5px"
                    android:text="广东省 东莞市 南城街道 769文化创意园2栋3楼，易得网络科技有限公司"
                    android:textColor="@color/textMinor"
                    android:textSize="@dimen/size_26" />
            </LinearLayout>

            <ImageView
                android:layout_width="12px"
                android:layout_height="22px"
                android:layout_marginLeft="30px"
                android:scaleType="centerCrop"
                android:src="@drawable/arrow_right_little" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:background="@color/colorFore"
            android:divider="@drawable/shape_divider_line_light"
            android:orientation="vertical"
            android:showDividers="middle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="78px"
                android:layout_marginLeft="25px"
                android:gravity="center_vertical"
                android:text="@string/a_retail_goods"
                android:textColor="@color/textMinor"
                android:textSize="@dimen/size_26" />

            <LinearLayout
                android:id="@+id/layout_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/shape_divider_line_light"
                android:orientation="vertical"
                android:showDividers="middle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:layout_marginTop="20px"
            android:background="@color/colorFore"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="25px"
            android:paddingRight="25px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a_remark_"
                android:textColor="@color/textSuper"
                android:textSize="@dimen/size_28" />

            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/a_current_deal_introduce"
                android:singleLine="true"
                android:textColor="@color/textSuper"
                android:textColorHint="@color/textLesser"
                android:textSize="@dimen/size_28" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:layout_marginTop="20px"
            android:background="@color/colorFore"
            android:paddingLeft="25px"
            android:paddingRight="25px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text="@string/a_total_"
                android:textColor="@color/textMain"
                android:textSize="@dimen/size_28" />

            <TextView
                android:id="@+id/tv_total_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text="£0.00"
                android:textColor="@color/textMain"
                android:textSize="@dimen/size_28" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:background="@color/colorFore"
            android:paddingLeft="25px"
            android:paddingRight="25px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text="@string/a_freight_"
                android:textColor="@color/textMain"
                android:textSize="@dimen/size_28" />

            <TextView
                android:id="@+id/tv_freight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text="£0.00"
                android:textColor="@color/textMain"
                android:textSize="@dimen/size_28" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:background="@color/colorFore"
            android:paddingLeft="25px"
            android:paddingRight="25px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text="@string/a_discount_"
                android:textColor="@color/textMain"
                android:textSize="@dimen/size_28" />

            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text="£0.00"
                android:textColor="@color/textMain"
                android:textSize="@dimen/size_28" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:background="@color/colorFore"
            android:paddingLeft="25px"
            android:paddingRight="25px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text="@string/a_actual_pay_"
                android:textColor="@color/textMain"
                android:textSize="@dimen/size_28" />

            <TextView
                android:id="@+id/tv_actual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text="£0.00"
                android:textColor="@color/textMain"
                android:textSize="@dimen/size_28" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:layout_marginBottom="20px"
            android:background="@color/colorFore"
            android:paddingLeft="25px"
            android:paddingRight="25px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text="@string/a_create_order_time_"
                android:textColor="@color/textMain"
                android:textSize="@dimen/size_28" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text="2017/11/29 16:58"
                android:textColor="@color/textMain"
                android:textSize="@dimen/size_28" />
        </FrameLayout>

        <LinearLayout
            android:background="@color/colorFore"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:paddingLeft="25px">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="164px"
                android:layout_height="64px"
                android:visibility="gone"
                android:layout_marginRight="25px"
                android:background="@drawable/shape_border_gray_r5"
                android:text="@string/a_cancel_order"
                android:textColor="@color/textMain"
                android:textSize="@dimen/size_28" />

            <Button
                android:id="@+id/btn_pay"
                android:layout_width="164px"
                android:layout_height="64px"
                android:layout_marginRight="25px"
                android:background="@drawable/shape_border_red_r5"
                android:text="@string/a_now_pay"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/size_28"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_look"
                android:layout_width="164px"
                android:layout_height="64px"
                android:layout_marginRight="25px"
                android:background="@drawable/shape_border_gray_r5"
                android:text="@string/a_look_delivery"
                android:textColor="@color/textMain"
                android:textSize="@dimen/size_28"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_apply"
                android:layout_width="164px"
                android:layout_height="64px"
                android:layout_marginRight="25px"
                android:background="@drawable/shape_border_red_r5"
                android:text="@string/a_apply_after_sale"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/size_28"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="164px"
                android:layout_height="64px"
                android:layout_marginRight="25px"
                android:background="@drawable/shape_border_red_r5"
                android:text="@string/a_confirm_receive"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/size_28"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>