<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="750px"
    android:divider="@drawable/shape_divider_line"
    android:orientation="vertical"
    android:background="@color/colorFore"
    android:showDividers="middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/textSuper"
            android:textSize="@dimen/size_28" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="@string/a_select_city"
            android:textColor="@color/textLesser"
            android:textSize="@dimen/size_28" />

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_marginBottom="20px"
            android:layout_marginTop="20px"
            android:background="@drawable/shape_divider_line" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="88px"
            android:layout_height="88px"
            android:padding="28px"
            android:src="@drawable/close_gray" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>