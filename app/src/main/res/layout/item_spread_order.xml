<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1px"
    android:background="@color/colorFore"
    android:orientation="vertical"
    android:paddingLeft="25px"
    android:paddingRight="25px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48px"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="8px"
            android:layout_height="68px"
            android:background="@drawable/line_v" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a_order_money_"
                android:textColor="@color/textMain"
                android:textSize="@dimen/size_28" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="name"
                android:textColor="@color/textMinor"
                android:textSize="@dimen/size_26" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/arrow_right_little"
            android:drawablePadding="20px"
            android:text="0.00"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/size_32" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25px"
        android:layout_marginTop="48px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/a_order_num_"
            android:textColor="@color/textLesser"
            android:textSize="@dimen/size_22" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a_time_"
            android:textColor="@color/textLesser"
            android:textSize="@dimen/size_22" />
    </LinearLayout>

</LinearLayout>