<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20px"
    android:divider="@drawable/shape_divider_line"
    android:orientation="vertical"
    android:showDividers="middle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorFore"
        android:padding="25px">

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="@string/a_refund_order_no_"
            android:textColor="@color/textMinor"
            android:textSize="@dimen/size_28" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_no"
            android:layout_marginTop="20px"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="@string/a_refund_order_type_"
            android:textColor="@color/textMinor"
            android:textSize="@dimen/size_28" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="status"
            android:textColor="@color/colorBrown"
            android:textSize="@dimen/size_28" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorFore"
        android:padding="25px">

        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="140px"
            android:layout_height="140px"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder_1"
            app:layout_auto_basewidth="height" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="5px"
            android:layout_toRightOf="@+id/iv_goods"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="name"
            android:textColor="@color/textMain"
            android:textSize="@dimen/size_28" />

        <TextView
            android:id="@+id/tv_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_alignBottom="@+id/iv_goods"
            android:layout_marginBottom="5px"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="@string/a_default_spec"
            android:textColor="@color/textLesser"
            android:textSize="@dimen/size_24"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_alignBottom="@+id/tv_spec"
            android:layout_toRightOf="@+id/tv_spec"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="@string/a_apply_num"
            android:textColor="@color/textLesser"
            android:textSize="@dimen/size_24" />

        <TextView
            android:id="@+id/btn_detail"
            android:layout_width="162px"
            android:layout_height="60px"
            android:layout_alignBottom="@+id/iv_goods"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_border_brown_r8"
            android:gravity="center"
            android:text="@string/a_look_detail"
            android:textColor="@color/colorBrown"
            android:textSize="@dimen/size_26" />
    </RelativeLayout>

</LinearLayout>