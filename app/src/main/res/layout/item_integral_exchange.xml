<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorFore"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25px"
        android:layout_marginTop="25px"
        android:ellipsize="end"
        android:lines="1"
        android:text="type"
        android:textColor="@color/textSuper"
        android:textSize="@dimen/size_28" />

    <TextView
        android:id="@+id/tv_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_type"
        android:layout_below="@+id/tv_type"
        android:layout_marginTop="20px"
        android:layout_marginBottom="25px"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/a_last_"
        android:textColor="@color/textLesser"
        android:textSize="@dimen/size_22" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_type"
        android:layout_marginRight="25px"
        android:ellipsize="end"
        android:lines="1"
        android:text="1970/00/00 00:00"
        android:textColor="@color/textLesser"
        android:textSize="@dimen/size_22" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
       android:layout_alignBottom="@+id/tv_last"
        android:layout_alignRight="@+id/tv_date"
        android:lines="1"
        android:text="+00.00"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/size_28" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/iv_goods"
        android:background="@drawable/shape_divider_line_light" />


</RelativeLayout>