<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180px"
    android:background="@drawable/integral_bg"
    android:orientation="vertical">

    <com.easyder.club.widget.DrawableTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginTop="35px"
        android:drawablePadding="10px"
        android:text="@string/a_integral_balance_tip"
        android:textColor="@color/colorFore"
        android:textSize="@dimen/size_24"
        app:imageHeight="21px"
        app:imageWidth="19px"
        app:leftImage="@drawable/integral" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginTop="15px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:paddingRight="10px"
            android:text="0000"
            android:textColor="@color/colorFore"
            android:textSize="66px" />

        <com.easyder.club.widget.DrawableTextView
            android:id="@+id/dtv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="25px"
            android:background="@drawable/shape_border_white_r16"
            android:drawablePadding="5px"
            android:gravity="center"
            android:paddingBottom="10px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:paddingTop="10px"
            android:text="@string/a_detail"
            android:textColor="@color/colorFore"
            android:textSize="@dimen/size_22"
            app:imageHeight="30px"
            app:imageWidth="25px"
            app:topImage="@drawable/integral_detail" />

        <com.easyder.club.widget.DrawableTextView
            android:id="@+id/dtv_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="25px"
            android:background="@drawable/shape_border_white_r16"
            android:drawablePadding="5px"
            android:gravity="center"
            android:paddingBottom="10px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:paddingTop="10px"
            android:text="@string/a_history"
            android:textColor="@color/colorFore"
            android:textSize="@dimen/size_22"
            app:imageHeight="30px"
            app:imageWidth="30px"
            app:topImage="@drawable/integral_history" />

    </LinearLayout>

</LinearLayout>