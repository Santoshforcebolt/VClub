<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1px"
    android:background="@color/colorFore"
    android:orientation="horizontal"
    android:padding="25px">

    <ImageView
        android:id="@+id/iv_goods"
        android:layout_width="280px"
        android:layout_height="280px"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder_1"
        app:layout_auto_basewidth="height" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="25px"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="6px"
            android:maxLines="2"
            android:text="尊尼获加洋酒 威士忌 黑方 黑牌 调配型苏格兰威士700ml调配型苏格兰威士700ml"
            android:textColor="@color/textSuper"
            android:textSize="@dimen/size_28" />

        <TextView
            android:id="@+id/tv_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38px"
            android:text="@string/a_average_evaluate_"
            android:textColor="@color/textLesser"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/size_24" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginTop="25px"
            android:layout_weight="1"
            android:text="@string/a_wine_collect_num_"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/textLesser"
            android:textSize="@dimen/size_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:layout_weight="1"
                android:textColor="@color/colorBrown"
                android:textSize="@dimen/size_36" />

            <TextView
                android:id="@+id/tv_original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25px"
                android:layout_weight="1"
                android:text="0.00"
                android:visibility="gone"
                android:textColor="@color/textLesser"
                android:textSize="@dimen/size_26" />

            <TextView
                android:id="@+id/tv_enjoy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a_go_enjoy"
                android:textColor="@color/colorBrown"
                android:textSize="@dimen/size_24" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>