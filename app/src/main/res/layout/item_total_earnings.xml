<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1px"
    android:background="@color/colorFore"
    android:padding="25px">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="68px"
        android:layout_height="68px"
        android:layout_centerVertical="true"
        android:src="@drawable/income4"
        app:layout_auto_basewidth="height" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25px"
        android:layout_toRightOf="@+id/iv_image"
        android:ellipsize="end"
        android:lines="1"
        android:text="会员下单"
        android:textColor="@color/textMain"
        android:textSize="@dimen/size_28"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_order_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_type"
        android:layout_alignLeft="@id/tv_type"
        android:layout_marginTop="10px"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/a_order_number_"
        android:textColor="@color/textLesser"
        android:textSize="@dimen/size_22" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:ellipsize="end"
        android:lines="1"
        android:text="+258.00"
        android:textColor="@color/textMain"
        android:textSize="@dimen/size_28"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_amount"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10px"
        android:ellipsize="end"
        android:lines="1"
        android:text="2017/02/15 15:32"
        android:textColor="@color/textMain"
        android:textSize="@dimen/size_22" />
</RelativeLayout>
