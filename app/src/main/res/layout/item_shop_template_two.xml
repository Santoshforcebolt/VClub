<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="225px"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15px">

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/iv_image"
            android:layout_width="210px"
            android:layout_height="210px"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder_1"
            app:layout_auto_basewidth="height"
            app:sriv_left_bottom_corner_radius="5px"
            app:sriv_left_top_corner_radius="5px"
            app:sriv_right_bottom_corner_radius="5px"
            app:sriv_right_top_corner_radius="5px" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:ellipsize="end"
            android:lineSpacingExtra="5px"
            android:maxLines="2"
            android:textColor="@color/textMain"
            android:textSize="@dimen/size_26"
            tools:text="本利亚克克莱嘉赫单一麦芽苏格兰" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:gravity="center_vertical|bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="£0"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/size_30" />

            <TextView
                android:id="@+id/tv_original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:text="£0"
                android:textColor="@color/textLesser"
                android:textSize="@dimen/size_20" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_look_more"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_marginLeft="45px"
        android:layout_marginTop="30px"
        android:background="@drawable/shape_bg_gray_dot"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_auto_basewidth="height">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/a_look_more"
            android:textColor="@color/textMinor"
            android:textSize="@dimen/size_26" />

        <ImageView
            android:layout_width="26px"
            android:layout_height="12px"
            android:layout_marginTop="10px"
            android:src="@drawable/to_right" />
    </LinearLayout>

</LinearLayout>