<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:layout_marginTop="20px"
        android:background="@color/colorFore"
        android:orientation="vertical"
        android:paddingLeft="25px"
        android:paddingRight="25px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="@string/a_pay_money_"
            android:textColor="@color/textMain"
            android:textSize="@dimen/size_30" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_vertical"
            android:text="£0.00"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/size_30" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="107px"
        android:layout_marginTop="20px"
        android:background="@color/colorFore"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <ImageView
            android:layout_width="54px"
            android:layout_height="51px"
            android:src="@drawable/wallet_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:text="@string/a_account_balance_"
            android:textColor="@color/textMain"
            android:textSize="@dimen/size_30" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_weight="1"
            android:text="£0.00"
            android:textColor="@color/textLesser"
            android:textSize="@dimen/size_30" />

        <ImageView
            android:id="@+id/iv_wallet_select"
            android:layout_width="48px"
            android:layout_height="48px"
            android:padding="5px"
            android:scaleType="fitXY"
            android:src="@drawable/selector_check" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="142px"
        android:layout_marginTop="1px"
        android:background="@color/colorFore"
        android:orientation="horizontal"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <ImageView
            android:layout_width="54px"
            android:layout_height="45px"
            android:layout_marginTop="31px"
            android:src="@drawable/card" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credit Card"
                android:textColor="@color/textMain"
                android:textSize="@dimen/size_30" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/a_please_input_credit_card_number"
                    android:lines="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/textLesser"
                    android:textSize="@dimen/size_30" />

                <ImageView
                    android:id="@+id/iv_edit"
                    android:layout_width="29px"
                    android:layout_height="32px"
                    android:layout_marginLeft="35px"
                    android:padding="5px"
                    android:src="@drawable/edit_card" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_card_select"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_gravity="center_vertical"
            android:padding="5px"
            android:scaleType="fitXY"
            android:src="@drawable/selector_check"
            app:layout_auto_basewidth="height" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_commit"
        style="@style/ButtonStyle"
        android:layout_marginTop="38px"
        android:text="@string/a_now_pay" />

</LinearLayout>