<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="25px"
    android:background="@color/colorBack">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="600px"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600px"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="25px">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_marginTop="15px"
            android:text="@string/a_member_special_price"
            android:textColor="@color/colorFore"
            android:textSize="@dimen/size_34"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40px"
            android:background="@drawable/shape_bg_white_r10"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_goods"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/ll_look_more"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="@drawable/shape_bg_gray_bottom_r10"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/a_look_more"
                    android:textColor="@color/textMinor"
                    android:textSize="@dimen/size_26" />

                <ImageView
                    android:layout_width="12px"
                    android:layout_height="22px"
                    android:layout_marginLeft="20px"
                    android:scaleType="centerCrop"
                    android:src="@drawable/arrow_right_little" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</FrameLayout>


