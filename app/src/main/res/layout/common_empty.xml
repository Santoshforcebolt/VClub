<?xml version="1.0" encoding="utf-8"?>
<com.sky.widget.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_flag"
        android:layout_width="297px"
        android:layout_height="297px"
        app:layout_auto_basewidth="height"
        android:src="@drawable/ic_empty"/>

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:text="@string/a_temp_no_content"
        android:textColor="@color/textLesser"
        android:textSize="@dimen/size_24"/>

</com.sky.widget.autolayout.AutoLinearLayout>