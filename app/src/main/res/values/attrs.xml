<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--自定义textview  附加图片的大小，做兼容适配-->
    <declare-styleable name="CustomDrawableTextView">
        <attr name="leftImage" format="reference" />
        <attr name="topImage" format="reference" />
        <attr name="rightImage" format="reference" />
        <attr name="bottomImage" format="reference" />
        <attr name="imageWidth" format="dimension" />
        <attr name="imageHeight" format="dimension" />
    </declare-styleable>
    <declare-styleable name="SnapUpCountDownTimerView">
        <!--背景颜色 -->
        <attr name="scd_time_bg_drawable" format="color" />
        <attr name="scd_time_tv_color" format="color" />
        <attr name="scd_time_segmentation_symbols_color" format="color" />
    </declare-styleable>
</resources>
