<?xml version="1.0" encoding="utf-8"?>
<com.sky.widget.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack"
    android:gravity="center_horizontal"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_no_network"
        android:layout_width="552px"
        android:layout_height="336px"
        android:layout_marginTop="200px"
        app:srcCompat="@drawable/ic_no_net" />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60px"
        android:gravity="center"
        android:text="网络连接失败，请检查网络设置"
        android:textColor="@color/textLesser"
        android:textSize="28px" />

    <TextView
        android:id="@+id/btn_retry"
        android:layout_width="400px"
        android:layout_height="75px"
        android:layout_marginTop="50px"
        android:background="@drawable/selector_bg_retry"
        android:gravity="center"
        android:text="重新加载"
        android:textColor="@color/textMain"
        android:textSize="26px" />

</com.sky.widget.autolayout.AutoLinearLayout>
